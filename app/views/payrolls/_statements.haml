= link_to "員工資料", employee_path(payroll.employee), class: "btn btn-xs btn-default"
- if payroll.statements.any?
  = link_to "修改明細", edit_payroll_path(payroll), class: "btn btn-xs btn-default"
  - payroll.statements.each do |statement|
    = link_to "薪資單", statement_path(statement), class: "btn btn-xs btn-info"
    = link_to "PDF", statement_path(statement, format: :pdf), class: "btn btn-xs btn-info"
- else
  = link_to "設定明細", edit_payroll_path(payroll), class: "btn btn-xs btn-warning"
