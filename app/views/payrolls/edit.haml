%h1 薪資單明細設定
= link_to "#{@payroll.employee.name}", employee_path(@payroll.employee), class: "btn btn-sm btn-info"
= link_to "#{@payroll.year}/#{@payroll.month} 薪資單", payroll_path(@payroll), class: "btn btn-sm btn-info"

= simple_form_for @payroll do |f|
  = render "basic_form", f: f
  = render "overtime_form", f: f
  = render "extra_entry_form", f: f

  .text-center
    = f.submit "送出"
