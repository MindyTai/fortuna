%table.table
  %tr
    %th.col-md-1 姓名
    %td.col-md-2= @payroll[:meta][:name]
    %th.col-md-1 計薪月份
    %td= @payroll[:meta][:period]
  %tr
    %th 本薪
    %td= @payroll[:monthly_based_income][:base]
    %th 勞保費
    %td= @payroll[:deductions][:labor_insurance]
  %tr
    %th 午餐費
    %td= @payroll[:monthly_based_income][:taxfree_lunch]
    %th 健保費
    %td= @payroll[:deductions][:health_insurance]
  %tr
    %th 設備津貼
    %td= @payroll[:monthly_based_income][:equipment_subsidy]
    %th 請假扣薪
    %td= @payroll[:deductions][:leavetime]
  - if @payroll[:monthly_based_income][:supervisor_allowance] > 0
    %tr
      %th 主管加給
      %td{colspan: 3}= @payroll[:monthly_based_income][:supervisor_allowance]
  - if @payroll[:fixed_amount_income][:overtime] > 0
    %tr
      %th 加班費
      %td{colspan: 3}= @payroll[:fixed_amount_income][:overtime]
  - if @payroll[:fixed_amount_income][:overtime_meals] > 0
    %tr
      %th 誤餐費
      %td{colspan: 3}= @payroll[:fixed_amount_income][:overtime_meals]
  - if @payroll[:fixed_amount_income][:business_trip] > 0
    %tr
      %th 出差津貼
      %td{colspan: 3}= @payroll[:fixed_amount_income][:business_trip]
  - if @payroll[:fixed_amount_income][:vacation_refund] > 0
    %tr
      %th 特休折現
      %td{colspan: 3}= @payroll[:fixed_amount_income][:vacation_refund]
  %tr.warning
    %th 加項小計
    %td= @payroll[:total][:income]
    %th 減項小計
    %td= @payroll[:total][:deduction]
  %tr.info
    %th 實發薪資
    %td{colspan: 3}= @payroll[:total][:total]
  %tr
    %th 備註
    %td{colspan: 3}
      %ul
        %li #{@payroll[:meta][:onboard]} 到職
        %li 本月請假 #{@payroll[:meta][:notes][:leavetime]} 小時
        - @payroll[:meta][:notes][:overtime].each do |ot|
          %li #{ot[:date]} 加班 #{ot[:hours]} 小時
