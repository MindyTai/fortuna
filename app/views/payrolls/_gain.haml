%table.table
  %tr.warning
    %th.col-xs-1 薪資項目
    %td.col-xs-2
  %tr
    %th 本薪
    %td= gain[:base]
  %tr
    %th 午餐費
    %td= gain[:taxfree_lunch]
  - if gain[:equipment_subsidy]
    %tr
      %th 設備津貼
      %td= gain[:equipment_subsidy]
  - if gain[:supervisor_allowance]
    %tr
      %th 主管加給
      %td= gain[:supervisor_allowance]
  - if gain[:overtime]
    %tr
      %th 加班費
      %td= gain[:overtime]
  - if gain[:vacation_refund]
    %tr
      %th 特休折換
      %td= gain[:vacation_refund]
  - gain[:extra].each do |key, value|
    %tr
      %th= key
      %td= value
  - if rows < 0
    = render "placeholder_rows", rows: rows.abs
