= render "header"

%h3 #{params[:year]} 年非經常性給予支出表
- if @report.any?
  %table.table
    %tr
      %th 姓名
      - 1.upto(12) do |month|
        %th= "#{month} 月"
    - @report.each do |row|
      %tr
        %td= link_to row[:employee][:name], employee_path(row[:employee][:id])
        - 12.times do |month|
          = render "irregular_cell", cell: row[:income][month]
